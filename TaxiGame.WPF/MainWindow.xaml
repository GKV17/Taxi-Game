<Window x:Class="TaxiGame.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Jeu de Taxi" Height="600" Width="900">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- En-tête -->
        <Border Grid.Row="0" Background="LightBlue" Padding="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="🚕 " FontSize="24"/>
                <TextBlock Text="TAXI GAME SIMPLE" 
                          FontSize="20" 
                          FontWeight="Bold"/>
                <TextBlock Text=" 🚖" FontSize="24"/>
            </StackPanel>
        </Border>

        <!-- Contenu principal -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Plateau -->
            <Border Grid.Column="0" BorderBrush="Gray" BorderThickness="1" Margin="10" RenderTransformOrigin="0.5,0.5">
                <Border.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="-0.148"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Border.RenderTransform>
                <ScrollViewer>
                    <WrapPanel x:Name="plateauPanel" Margin="10"/>
                </ScrollViewer>
            </Border>

            <!-- Panneau de contrôle -->
            <StackPanel Grid.Column="1" Margin="10">
                <GroupBox Header="Configuration" Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock Text="Nom de la partie:" Margin="5"/>
                        <TextBox x:Name="txtNomPartie" Text="Partie simple" Margin="5"/>

                        <Button x:Name="btnNouvpa"
                                Content="Nouvelle Partie" 
                                Click="NouvellePartie_Click"
                                Margin="5" Padding="10" Background="Green" Foreground="White"/>

                        <Button x:Name="btnCharger"
                                Content="Charger" 
                                Click="ChargerPartie_Click"
                                Margin="5" Padding="10" Background="Blue" Foreground="White"/>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="Joueurs" Margin="0,0,0,10">
                    <StackPanel>
                        <StackPanel x:Name="joueursConfigPanel" Margin="5"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button x:Name="btnAjouterJoueur" 
                                    Content="Ajouter un joueur" 
                                    Click="AjouterJoueur_Click"
                                    Margin="5" Padding="5"/>
                            <Button x:Name="btnSupprimerJoueur" 
                                    Content="Supprimer un joueur" 
                                    Click="SupprimerJoueur_Click"
                                    Margin="5" Padding="5"
                                    Background="LightCoral"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="Jeu" Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock x:Name="txtTourInfo" Margin="5"/>
                        <Button x:Name="btnJouer" Content="Jouer le tour" 
                                Click="JouerTour_Click"
                                Margin="5" Padding="10" Background="Orange"/>

                        <Button Content="Sauvegarder" 
                                Click="Sauvegarder_Click"
                                Margin="5" Padding="10"/>
                    </StackPanel>
                </GroupBox>
                <!-- Tout en bas du StackPanel principal -->
                <Button x:Name="btnQuitter" Content="Quitter le jeu" 
                        Click="Quitter_Click"
                        Margin="10" Padding="10" 
                        Background="DarkRed" Foreground="White"
                        FontWeight="Bold"
                        HorizontalAlignment="Stretch"/>

                <GroupBox Header="Journal">
                    <TextBox x:Name="txtJournal" IsReadOnly="True" 
                            Height="150" Margin="5"
                            VerticalScrollBarVisibility="Auto"/>
                </GroupBox>

            </StackPanel>
        </Grid>
        <StackPanel/>
    </Grid>
</Window>